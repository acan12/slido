.container
  .row
    .col-md-6.col-md-offset-3
      .well.well-sm
        = form_for(@presentation, :html => {:class => 'form-horizontal'}) do |f|
          %fieldset
            %legend.text-center Presentation
            / Name input
            .form-group
              .col-md-1
                = f.label :title, :class => 'control-label'
              .col-md-9
                = f.text_field :title, :class => "form-control", :placeholder => 'Title'
              .col-md-1.text-right
                = f.submit 'Save', :class => 'btn btn-primary'  


              